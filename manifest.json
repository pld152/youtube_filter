{
  "manifest_version": 3,
  "name": "YouTube Filter - Views and Age",
  "version": "1.0.0",
  "description": "Hide YouTube videos below a minimum view count or older than a certain age.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Filter"
  }
}
